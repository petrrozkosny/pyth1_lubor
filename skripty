    if mesta[vstup] != None:
        print(f'Kraj města {vstup} je {mesta[vstup]}')
    else:
        print(f'Pro mesto {vstup} nebyl doplneny kraj')

except KeyError:
    print(f'Město {vstup} není ve slovníku')

