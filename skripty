mesta = {'kromeriz':'zlinsky','pardubice':'pardubicky'}

for k,v in mesta.items():
    if k == 'kromeriz':
        # continue prechazi k dalsi polozce iterace
        continue
    else:
        print(f'mesto {k} se nachazi v okrese {v}')


